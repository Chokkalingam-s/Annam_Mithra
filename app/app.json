{
  "expo": {
    "name": "Annam Mithra",
    "slug": "annam-mithra",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#708238"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourname.annammithra",
      "googleServicesFile": "./GoogleService-Info.plist"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#708238"
      },
      "package": "com.yourname.annammithra",
      "googleServicesFile": "./google-services.json",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Annam Mithra to use your location to find nearby food donations."
        }
      ]
    ],
    "web": {
      "config": {
        "firebase": {
          "apiKey": "YOUR_WEB_API_KEY",
          "authDomain": "annam-mithra.firebaseapp.com",
          "projectId": "annam-mithra",
          "storageBucket": "annam-mithra.appspot.com",
          "messagingSenderId": "YOUR_SENDER_ID",
          "appId": "YOUR_APP_ID"
        }
      }
    }
  }
}
